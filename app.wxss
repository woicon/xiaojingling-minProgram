/* //tabbar */

.tab {
    background: #fff;
    text-align: center;
    padding: 0 0;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.tab>view {
    display: inline-block;
    padding: 0 44rpx;
    border: 1px solid #0ec695;
    margin-left: -1rpx;
    font-size: 28rpx;
    color: #0ec695;
    line-height: 54rpx;
}

.tab>view:first-child {
    border-radius: 4rpx 0 0 4rpx;
}

.tab>view:last-child {
    border-radius: 0 4rpx 4rpx 0;
}

.tab .active {
    background: #0ec695;
    color: #fff;
}

.r-info {
    font-size: 23rpx;
    color: #999;
    display: flex;
    margin: 20rpx 30rpx 0;
    align-items: center;
}

.r-info .ico {
    margin-right: 10rpx;
    color: #999;
    transform: rotate(180deg);
    font-size: 28rpx;
}

.loading-bottom {
    text-align: center;
    opacity: 0.5;
    display: flex;
    align-items: center;
}

.loading-bottom>view {
    display: inline-block;
    width: 14rpx;
    height: 14rpx;
    background: #444;
    border-radius: 90px;
    margin: 0 8rpx;
    position: relative;
    font-size: 0;
    animation: bottomloading ease-in-out 1.4s infinite;
}

.loading-bottom>view:nth-of-type(1) {
    animation-delay: 0s;
}

.loading-bottom>view:nth-of-type(2) {
    animation-delay: 0.4s;
}

.loading-bottom>view:nth-of-type(3) {
    animation-delay: 0.8s;
}

.nomore {
    animation: sliderInUp linear 0.4s;
}

.button-loading {
    transform: scale(0.7);
}

.button-loading>view {
    background: #fff;
}

@keyframes bottomloading {
    0% {
        transform: scale(1);
        opacity: 0.1;
    }

    50% {
        transform: scale(1.3);
        opacity: 1;
    }

    100% {
        transform: scale(1);
        opacity: 0.1;
    }
}

@keyframes sliderUp {
    from {
        transform: translateY(90rpx);
        opacity: 0.2;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }
}

