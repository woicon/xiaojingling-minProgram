.bline, .lline, .rline, .blines {
    position: relative;
}

.bline:before, .blines:after {
    content: '';
    display: block;
    left: -50%;
    right: -50%;
    bottom: -1px;
    position: absolute;
    border-bottom: 1px solid #eee;
    height: 1px;
    transform: scale(0.5);
}

.lline:after {
    content: '';
    width: 1px;
    top: -50%;
    left: 0;
    bottom: -50%;
    position: absolute;
    border-left: 1px solid #eee;
    transform: scale(0.5);
}

.rline:after {
    content: '';
    width: 3px;
    top: -50%;
    right: -1px;
    bottom: -50%;
    position: absolute;
    border: none !important;
    border-right: 1px solid #eee !important;
    transform: scale(0.5);
}

