}

.btnbar {
    text-align: center;
    padding: 20px 0 60px;
}

.btnbar .info {
    margin: 0 30rpx 50rpx;
    font-size: 24rpx;
    text-align: left;
    color: #27cfb1;
}

.btnbar .btn {
