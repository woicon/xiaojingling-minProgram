/**app.wxss**/
@import "icon.wxss";
@import "ico.wxss";

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

page {
    background: #fafafa;
    box-sizing: border-box;
}

.lines {
    display: flex;
    align-items: center;
    padding: 32rpx 0;
    margin: 0 40rpx;
    justify-content: space-between;
    font-size: 28rpx;
    color: #999;
    position: relative;
    background: #fff;
}

.lines:after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    height: 1px;
    bottom: 0;
    transform-origin: 0 100%;
    background: #eee;
    transform: scale(0.5);
    width: 200%;
}

.lines:last-child::after {
    border: none;
    background: transparent;
}

.lines text {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.lines .value {
    font-size: 30rpx;
    color: #444;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    text-align: right;
}

