page {
    background: #fff;
    box-sizing: border-box;
    overflow: hidden;
    color: #555;
}
@import "../../nid.wxss";

.border-r {
    border-right: 1px solid #eee;
    box-sizing: border-box;
}

.border-b {
    border-bottom: 1px solid #eee;
    box-sizing: border-box;
}

.btn-creatpay {
    background: #ff6d50;
    color: #fff;
    display: flex;
    position: relative;
    z-index: 2;
}

.btn-creatpay.distopay {
    opacity: 0.6;
}

.key-btngroup .btn-creatpay text {
    color: #fff;
    width: 48rpx;
    font-size: 48rpx;
    margin-top: 0;
    font-weight: 800;
}

.btn-creatpay.creatpay-touch {
    background: #ff6d50;
    color: #fff;
    opacity: 0.7;
}

.btn-creatpay.creatpay-touch text {
    color: #fff;
}

.delnum {
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
}

.key-border {
    background: #fff;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
}

.key-border.show {
    animation: sliderUp ease-in 0.4s forwards;
}

.key-border.hide {
    animation: sliderDown ease-out 0.4s forwards;
}

.key-numbergroup>view.hidekey {
    font-size: 60rpx;
}

@keyframes sliderDown {
    0% {
        transform: translateY(0);
    }

    100% {
        transform: translateY(100%);
    }
}

@keyframes sliderUp {
    0% {
        transform: translateY(100%);
    }

    100% {
        transform: translateY(0);
    }
}

.key-btngroup view text {
    font-size: 50rpx;
    text-align: center;
    color: #888;
    padding-top: 10rpx;
}

.key-warp {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.px .key-border {
    padding-bottom: 34px;
}

.key-numbergroup {
    width: 75%;
    text-align: center;
    background: #fff;
    overflow: hidden;
    height: 100%;
}

.key-price {
    display: flex;
    flex-wrap: wrap;
    font-size: 30rpx;
}

.key-price>view {
    width: 50%;
    text-align: center;
    padding: 20rpx 0;
}

.key-numbergroup>view {
    width: 33.333333%;
    height: 25%;
    float: left;
    color: #666;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    font-size: 72rpx;
    transition: 0.2s;
    position: relative;
    font-family: 'Mono';
}

.addnum {
    font-family: 'Mono';
    color: #666;
    font-size: 72rpx;
}

.key-numbergroup>view:after {
    content: '';
    display: block;
    border: 1px solid #ddd;
}

.key-numbergroup .ico {
    font-size: 70rpx;
}

.key-btngroup {
    background: #fff;
    width: 25%;
    overflow: hidden;
    position: absolute;
    right: 0;
    bottom: 0;
    top: 0;
}

.key-btngroup .ico {
    color: #666;
    height: 25%;
    position: relative;
    z-index: 10;
}

.key-btngroup>view {
    display: flex;
    align-items: center;
    font-size: 30px;
    width: 100%;
    height: 25%;
    flex-direction: column;
    justify-content: center;
    line-height: normal;
}

@keyframes ops {
    0% {
        opacity: 0.1;
    }

    100% {
        opacity: 0.8;
    }
}

.btn-wx {
    color: #1aad19;
}

.btn-alpay {
    color: #0be;
    height: 75%;
}

.btn-vip {
    color: tomato;
}

.total {
    background: #0ec695;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-image: linear-gradient(0deg, #0ec695 0%, #0ec695 100%);
    position: relative;
}

.total-inner {
    border-radius: 10rpx;
    margin: 40rpx;
    padding: 40rpx 0;
}

.total-warp {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
}

.total-title {
    font-size: 28rpx;
    color: #fff;
}

.total-price {
    text-align: right;
    font-size: 90rpx;
    color: #fff;
    display: flex;
    align-items: center;
    line-height: normal;
    font-family: 'Mono';
    height: 88rpx;
}

.price-empty {
    font-size: 66rpx;
    opacity: 0.4;
}

.total-price text {
    font-size: 45rpx;
    margin-right: 8rpx;
}

.total-check {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    width: 120rpx;
    color: #fff;
    font-size: 52rpx;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.total-check text {
    font-size: 26rpx;
    display: block;
    margin-top: 8px;
}

.price-line {
    width: 6rpx;
    height: 62rpx;
    background: #fff;
    animation: ops 1s ease-in-out infinite;
    margin-left: 8rpx;
}

.getcoupon {
    font-size: 28rpx;
    color: #fff;
    margin: 0 40rpx;
}

.get-money {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.coupon-list {
    background: #fff;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    top:560rpx;
    z-index: 100;
    overflow:hidden;
}
.px .coupon-list{
    bottom:34px;
}
.coupon-item {
    font-size: 26rpx;
    padding: 30rpx;
    position: relative;
    border-bottom: 1px solid #eee;
}

.coupon-scroll {
    height: 100%;
}

.coupon-info {
    color: #888;
}

.coupon-name {
    font-size: 30rpx;
}

.coupon-add {
    position: absolute;
    right: 0;
    top: 50%;
    margin-top: -60rpx;
    z-index: 10;
    width: 200rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.cbtn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100rpx;
    position: relative;
    z-index: 10;
}

.coupon-m, .coupon-a {
    width: 120rpx;
    height: 120rpx;
}

.aprice {
    text-decoration: line-through;
}

.mask {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 90;
}

.load {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}

.phcolor {
    color: #fff;
}

.key-touch {
    background: #eee;
}

.pos-cont {
    background: #fff;
    color: #444;
    margin: 10rpx 40rpx;
}

.mark {
    border-radius: 8rpx;
    align-items: center;
    justify-content: space-between;
    display: flex;
    color: #666;
}

.mark input {
    text-align: right;
}

.mark-value {
    text-align: right;
    font-size: 32rpx;
    display: flex;
    align-items: center;
}

.mark-value .price-line {
    width: 4rpx;
    height: 32rpx;
    background: #666;
}

.mark::before {
}

.mark-attr {
    font-size: 30rpx;
    padding: 30rpx 0;
    display: flex;
    align-items: center;
    flex: 1;
}

.mark-arr::after {
    content: '';
    display: block;
    width: 14rpx;
    height: 14rpx;
    border: 2px solid #ccc;
    border-left: none;
    border-bottom: none;
    transform: rotate(45deg) scale(0.8);
    margin-left: 20rpx;
}

.mark-attr .ico {
    margin: 0 20rpx;
    font-size: 41rpx;
}

.mark-input {
    padding: 16rpx 20rpx 16rpx 0;
    font-size: 26rpx;
    color: #fff;
    flex-grow: 2;
}



scroll-view {
    position: absolute;
    left: 0;
    right: 0;
    top:0;
    bottom: 0;
    background: #fafafa;
    max-height: 1100rpx;
    animation: sliderUp ease-in 0.3s forwards;
}

.coupon-num {
    background: #0ec695;
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 150rpx;
    height: 150rpx;
    font-size: 50rpx;
    font-family: 'mono';
    letter-spacing: -2px;
    margin: -1rpx;
    margin-right: 26rpx;
    border-radius: 14rpx 0 0 14rpx;
}

.coupon-num text {
    font-size: 28rpx;
}

.coupon-list-item {
    padding: 0 0;
    font-size: 24rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    margin: 30rpx 40rpx;
    border: 1rpx solid #eee;
    border-radius: 14rpx;
    height: 150rpx;
    background:#fff;
}

.coupon-list-info {
    flex: 1;
    padding: 0 0;
}
.coupon-list-date{
    display: flex;
    justify-content:space-between;
    padding-right:20rpx;
}
.coupon-least{
    color:#ff6d50;
}
.coupon-list-item .ico {
    font-size: 32rpx;
    color: #ccc;
    position:absolute;
    right:0;
    top:0;
    width:70rpx;
    height:70rpx;
}

.coupon-list-title {
    font-size: 34rpx;
    margin-bottom: 16rpx;
    color:#444;
}

.coupon-date {
    font-size: 22rpx;
    color: #999;
}

.coupon-list-type {
    color: #888;
}
