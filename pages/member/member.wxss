.auth {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0 40rpx;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 20%;
}

.auth-txt {
    margin: 0 10%;
    font-size: 28rpx;
    margin-bottom: 40rpx;
    color: #555;
    line-height: 1.6;
    text-align: center;
}

.user-img image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 90rpx;
}

.m-head-warp {
    background: #35b253;
}

.m-head {
    padding: 60rpx 40rpx;
    display: flex;
    align-items: center;
}

.m-img {
    margin-right: 20rpx;
}

.m-img image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 200rpx;
}

.m-info {
    color: #fff;
}

.m-list {
    background: #fff;
    padding: 0 55rpx;
}

.m-list>view, .m-list>navigator {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 30rpx;
    padding: 36rpx 0;
    color: #444;
    position: relative;
}

.m-list>view text, .m-list>navigator text {
    color: #888;
    margin-right: 10rpx;
}

.m-list>view::before, .m-list>navigator::before {
    content: '';
    position: absolute;
    display: block;
    border-bottom: 1px solid #ddd;
    bottom: 0;
    height: 2px;
    left: -50%;
    right: -50%;
    background-origin: content-box;
    transform: scale(0.5);
    flex-grow: 1;
}

.m-list .ico {
    flex-basis: 46rpx;
    width: 50rpx;
    font-size: 46rpx;
    margin-right: 20rpx;
}

.m-name {
    flex-grow: 2;
}

.m-list>view:after, .m-list>navigator::after {
    content: '';
    display: block;
    width: 12rpx;
    height: 12rpx;
    border: 2px solid #eee;
    border-left: none;
    border-bottom: none;
    transform: rotate(45deg);
}

.m-list>view:last-child::after {
    border-bottom: none;
}

.m-list .exit:before {
    border: none;
}

.m-ts {
    font-size: 24rpx;
    margin-top: 10rpx;
}
.m-ts text{
    background: rgba(0, 0, 0, .2);
    padding:6rpx 15rpx;
    display:inline-block;
    margin-left:14rpx;
}
.b {
    background: rgba(0, 0, 0, 0.1);
    padding:32rpx 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #fff;
}

.b .ico {
    flex-basis: 60rpx;
    flex-shrink: 0;
}

.banks {
    font-size: 30rpx;
    flex-grow:2;
}

.banks-text {
    color: #fff;
    font-size: 23rpx;
    margin-top: 10rpx;
}

.b .button {
    font-size: 26rpx;
    padding: 5rpx 30rpx;
    height: 50rpx;
    line-height: 50rpx;
    background: transparent;
    border: 1px solid #fff;
    margin: 0;
}
